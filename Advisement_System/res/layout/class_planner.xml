<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <!--adding my code for layout  for botton -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Plan my Semester"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:id="@+id/buttonPlannerDisplay"
        />
        <!--adding my code for layout  for textbox -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester Schedule"
        android:textSize="45dp"
        android:layout_gravity="center"
        android:id="@+id/textViewPlannerDisplay"
     />
    

</LinearLayout>
